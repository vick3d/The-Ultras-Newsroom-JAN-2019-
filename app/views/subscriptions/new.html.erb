<h2 class="text-center">Log in</h2>
<div class="border-b border-grey-light p-4 flex justify-center p-8">
  <div class="w-full max-w-xs">
    <%= form_with url: subscriptions_path, local: true, id: 'subscription_form' do |form| %>
    <div class="mb-6">
      <div class="">
        <label class="block text-black font-bold mb-1 pr-4" for="inline-full-name">
          <p>Payment Details</p>
        </label>  
      <div id="card-element" class="w-full mt-5">
    </div>
        <div class="mt-5 flex justify-center">
      <button class="">
          <%= form.submit "Submit payment", class: "text-center shadow bg-black hover:bg-grey-darker focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>     
      </button>
    </div>
    <% end %>
</div>
</div>
